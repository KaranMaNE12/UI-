    <!-- Add Medical History View -->
        <div class="container-fluid bg-primary my-5 py-5" id="medicineediteui" style="display:none;">
            <div class="container py-5">
                <div class="text-center mx-auto mb-5" style="max-width: 800px;">
                    <div class="bg-white text-center rounded p-5">
                        <h1 class="mb-4">Enter Medical History</h1>                        
                            <div class="row g-3">
                                <div class="col-12 col-sm-6">
                                <input type="text" id="pname" maxlength="60" class="form-control bg-light border-0" placeholder="Your Name" style="height: 55px;" disabled>
                                </div>
                                <div class="col-12 col-sm-6">
                                    <input type="text" id="pemail" maxlength="80" class="form-control bg-light border-0" placeholder="Your Email" style="height: 55px;" disabled>
                                </div>
                                <div class="col-lg-4 col-md-6">
                                    <input type="text" id="diseasename" maxlength="80" class="form-control bg-light border-0" placeholder="Disease Name" style="height: 55px;">
                                </div>
                                <div class="col-lg-4 col-md-6">
                                    <input type="date" id="diseasestart" maxlength="80" class="form-control bg-light border-0" placeholder="Treatment Start" style="height: 55px;">
                                </div>
                                <div class="col-lg-4 col-md-6">
                                    <input type="date" id="diseaseend" maxlength="80" class="form-control bg-light border-0" placeholder="Treatment End" style="height: 55px;">
                                </div>
                                <div class="col-12 col-sm-6">
                                    <input type="text" id="clinic_hosp_name" maxlength="50" class="form-control bg-light border-0" placeholder="Clinic/Hospital Name" style="height: 55px;">
                                </div>
                                <div class="col-12 col-sm-6">
                                    <input type="text" id="clinic_hosp_address" maxlength="80" class="form-control bg-light border-0" placeholder="Clinic/Hospital Address" style="height: 55px;" oninput="javascript: if (this.value.length > this.maxLength) this.value = this.value.slice(0, this.maxLength);">
                                </div>
                                <div class="col-12">
                                    <input type="text" id='symtoms' maxlength="200" class="form-control bg-light border-0" placeholder="Symtoms eg Fever,Headache" style="height: 55px;">
                                </div>
                                <div class="col-12 col-sm-6">
                                    <button class="btn btn-primary w-100 py-3" onclick="savediseaserecoreds1()">Save</button>
                                </div>
                                <div class="col-12 col-sm-6">
                                    <button class="btn btn-primary w-100 py-3" onclick="clear2()">Clear</button>
                                </div>
                            </div>
                        <h1 class="mb-4">Enter Medicine Data</h1>                        
                            <div class="row g-3">
                                <div class="col-lg-4 col-md-6">
