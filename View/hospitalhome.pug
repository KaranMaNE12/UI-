        <!--EDIT PROFILE VIWE-->
        <div class="container-fluid py-5" id="editpopmain" style="display:none">
            dialog(id="myproeditui" style="width:600px;")
                <div class="container py-5">
                    <div class="row gx-5">
                        <div class="col-12">
                            <div class="bg-white text-center rounded p-5">
                                <h1 class="mb-4">Hospital/Clinic Profile</h1>                        
                                    <div class="row g-3">
                                        <div class="col-12">
                                            label(for="hname") Hospital Name 
                                            <input type="text" id="hname1" value=#{hospitalname} maxlength="60" class="form-control bg-light border-0" placeholder="Hospital Name" style="height: 55px;">
                                        </div>
                                        <div class="col-12 col-sm-6">
                                            label(for="huser") User Name
                                            <input type="text" id="husername1" value=#{username} maxlength="60" class="form-control bg-light border-0" placeholder="Your Name" style="height: 55px;">
                                        </div>
                                        <div class="col-12 col-sm-6">
                                            label(for="email") Email 
                                            <input type="email" id="hemail1" value=#{email} maxlength="80" class="form-control bg-light border-0" placeholder="Your Email" style="height: 55px;">
                                        </div>
                                        <div class="col-12 col-sm-6">
                                            label(for="mobileno") Phone No 
                                            <input type="number" id="hmobileno1" maxlength="10" class="form-control bg-light border-0" placeholder="Mobile No." style="height: 55px;" oninput="javascript: if (this.value.length > this.maxLength) this.value = this.value.slice(0, this.maxLength);">
                                        </div>
                                        <div class="col-12 col-sm-6">
                                            <input type="date" id="hstarton" class="form-control bg-light border-0" placeholder="Start From" style="height: 55px;">
                                        </div>
                                        <div class="col-12 col-sm-6">
                                            label(for="hrno") HRN. No 
                                            <input type="text" id="hrno1" maxlength="15" class="form-control bg-light border-0" placeholder="HRN. No." maxlength="20" style="height: 55px;" oninput="javascript: if (this.value.length > this.maxLength) this.value = this.value.slice(0, this.maxLength);">
                                        </div>
                                        <div class="col-12 col-sm-6">
                                            label(for="haddress") Address 
                                            <input type="text" id='hAddress' maxlength="200" class="form-control bg-light border-0" placeholder="Full Address" style="height: 55px;">
                                        </div> 
                                        <div class="col-12 col-sm-6">
                                            label(for="hrno") City
                                            <input type="text" id="hcity" maxlength="30" class="form-control bg-light border-0" placeholder="City" maxlength="20" style="height: 55px;" oninput="javascript: if (this.value.length > this.maxLength) this.value = this.value.slice(0, this.maxLength);">
                                        </div>
                                        <div class="col-12 col-sm-6">
                                            label(for="haddress") State 
                                            <input type="text" id='hstate' maxlength="30" class="form-control bg-light border-0" placeholder="State" style="height: 55px;">
                                        </div>
                                        <div class="col-12">
                                            label(for="hname") Specialization
                                            <input type="text" id="specialization" maxlength="200" class="form-control bg-light border-0" placeholder="Specialization" style="height: 55px;">
